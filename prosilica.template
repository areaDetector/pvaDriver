###############################################################################
#  These records are for network and frame statistics                         #
###############################################################################
record(longout, "$(P)$(D)PSReadStatistics")
{
   field(DTYP, "asynInt32")
   field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))PS_READ_STATISTICS")
   field(SCAN, "5 second")
}

