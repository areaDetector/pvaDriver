record(ao, "$(P)$(D)GainX")
{
   field(DTYP, "asynFloat64")
   field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))SIM_GAINX")
   field(PREC, "2")
}

record(ai, "$(P)$(D)GainX_RBV")
{
   field(PINI, "1")
   field(DTYP, "asynFloat64")
   field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))SIM_GAINX")
   field(PREC, "2")
   field(SCAN, "I/O Intr")
}

